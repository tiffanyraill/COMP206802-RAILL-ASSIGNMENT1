<% include partials/header.ejs %>

<div class="main-wrapper" id="login">
<main class="container">
    <h1>Login</h1>
    <% if (messages.length > 0) { %>
    <div class="alert alert-danger"><%= messages %></div>
    <% }
    else { %>
    <h3>Please enter your Credentials or Sign in with Google</h3>
    <% } %>
    <form method="post">
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">Email: *</label>
            <input name="username" id="username" required type="email" />
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">Password: *</label>
            <input name="password" id="password" type="password" required />
        </div>
        <button class="btn btn-success col-sm-offset-2">Login</button>

            <a href="/google">
                <img src="/images/googleSignIn.png" width="130px" height="42px" />
            </a>

        <hr />
        Need access?  <a href="/register" title="Register">Register</a>
    </form>

</main>
</div>
<% include partials/footer.ejs %>
<% include ../partials/header.ejs %>

<div class="main-wrapper"  id="editPaper">
<main class="container">

<h1>Edit Paper Details</h1>

<form method="post">
    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Title: *</label>
        <input name="title" id="title" required value="<%= paper.title %>" />
    </div>
    <div class="form-group">
        <label for="course" class="col-sm-2 control-label">Course: *</label>
        <input name="course" id="course" required value="<%= paper.course %>" />
    </div>
    <div class="form-group">
        <label for="description" class="col-sm-2 control-label">Description:</label>
        <input name="description" id="description" required value="<%= paper.description %>"  />
    </div>
    <button class="btn btn-success col-sm-offset-2">Save</button>
</form>

</main>
</div>
<% include ../partials/footer.ejs %>